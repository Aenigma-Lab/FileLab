# =============================================================================
# Environment Variables Configuration
# Copy this file to .env and modify as needed
# =============================================================================

# =============================================================================
# MongoDB Configuration
# =============================================================================
# Connection string for MongoDB
MONGO_URL=mongodb://127.0.0.1:27017

# Database name
DB_NAME=file_conversion_db

# =============================================================================
# Backend Configuration
# =============================================================================
# Backend port (default: 8000)
# BACKEND_PORT=8000

# CORS origins (comma-separated)
CORS_ORIGINS=*

# Temp directory for file conversions
# TEMP_DIR=./backend/tmp/file_conversions

# =============================================================================
# Frontend Configuration (Optional)
# =============================================================================
# API URL for frontend (auto-detected in start.sh)
# REACT_APP_API_URL=http://127.0.0.1:8000

# =============================================================================
# MongoDB Server Configuration (for start.sh)
# =============================================================================
# MongoDB data directory (default: ./data/db)
# MONGO_DB_PATH=./data/db

